<h3>ConfirmDialog</h3>
@if (Show)
{
    <div class="modal-backdrop show"></div>
    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">@Message</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="Close">Anulează</button>
                    <button class="btn btn-danger" @onclick="Confirm">Confirmă</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public string Title { get; set; } = "Confirmare";
    [Parameter] public string Message { get; set; } = "Ești sigur?";
    [Parameter] public EventCallback<bool> OnResult { get; set; }

    Task Close() => OnResult.InvokeAsync(false);
    Task Confirm() => OnResult.InvokeAsync(true);
}
