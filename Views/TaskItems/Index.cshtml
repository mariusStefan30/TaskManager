@model IEnumerable<TaskManager.Models.TaskItem>

@{
    ViewData["Title"] = "Lista Taskuri";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Nu există taskuri. <a asp-action="Create">Adaugă primul task</a>.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Titlu</th>
                <th>Descriere</th>
                <th>Finalizat</th>
                <th>Acțiuni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                        @if (item.IsDone)
                        {
                            <span class="badge bg-success">Da</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Nu</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info ms-1">Detalii</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger ms-1">Șterge</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
